<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="imagesModel"
            type="com.gibsoncodes.filio.models.ImagesModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:id="@+id/modified_date"
            app:dateAdded="@{imagesModel.dateAdded}"
            android:layout_height="wrap_content"
            tools:text="Mon 23 2020"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            android:foregroundGravity="center"
            android:layout_below="@+id/modified_date"
            android:layout_height="200dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="200dp"
                app:imagesBitmap="@{imagesModel.uri}"
                tools:src="@drawable/picture_folder_icon"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_height="200dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:ems="10"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:text="@{imagesModel.name}"
                tools:text="Test document name "
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</layout>