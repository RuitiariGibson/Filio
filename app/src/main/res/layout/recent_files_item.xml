<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="recentFiles"
            type="com.gibsoncodes.filio.models.RecentFilesModel" />
    </data>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:strokeColor="#CACACA"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_margin="6dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
<com.google.android.material.imageview.ShapeableImageView
    android:layout_width="200dp"
    app:srcCompat="@drawable/ms_word_icon"
    android:id="@+id/fileIcon"
    android:scaleType="centerCrop"
    android:layout_centerHorizontal="true"
    app:shapeAppearance="@style/roundedImageView"
    app:loadRecentFilesThumbnails="@{recentFiles.fileType}"
    app:recentFilesUri="@{recentFiles.fileUri}"
    android:layout_margin="10dp"
    android:layout_height="200dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/name"
        android:layout_below="@id/fileIcon"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        tools:text="Screenshot_20201101-075662.png"
        android:ems="8"
        android:shadowDx="-20"
        android:shadowDy="-20"
        android:shadowColor="#1B1A1A"
        android:layout_centerHorizontal="true"
        android:text="@{recentFiles.fileName}"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</com.google.android.material.card.MaterialCardView>
</layout>
